.modal
    position fixed
    background Ink
    transition all 0.3s
    z-index: 1
    left 0
    top 0
    width: 100%;
    height: 100%;
    padding 10vh 0vw
    &__container
        background White
        border-radius 5px
        margin 0 auto;
        padding 20px 30.5px
    &--small
        width 400px
    &--primary
        width 570px
    &--medium
        width 600px  
    &--large
        width 800px      
    &--huge 
        width 960px   
    &__header
        font-size 26px
        font-family 'SourceSansPro-SemiBold'
        color Ink
        justify-content: space-between;
    &__content
       padding 20px 0px
       font-size 20px 
       font-family 'SourceSansPro-Regular'
       color lightInk
    &__action
        justify-content flex-end
        margin 10px 0px
        >button 
            margin 0px 12px   